{
    "name": "react-hooks",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "bootstrap": "^4.3.1",
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "react-router-dom": "^5.0.1",
        "react-scripts": "3.0.1"
    },
    "scripts": {
        "start": "webpack-dev-server --config ./webpack/webpack.dev.config.js",
        "build": "cross-env NODE_ENV=dev rimraf dist && webpack --colors --display-error-details --config ./webpack/webpack.dev.config.js",
        "lint": "eslint .",
        "pretty": "prettier --write --tab-width 4 \"src/**/*.js\"",
        "precommit": "lint-staged"
    },
    "lint-staged": {
        "*.js": [
            "yarn run pretty",
            "git add"
        ]
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@babel/preset-react": "^7.0.0",
        "babel-eslint": "^10.0.2",
        "babel-loader": "^8.0.6",
        "cross-env": "^5.2.0",
        "css-loader": "^3.0.0",
        "eslint": "^6.0.0",
        "eslint-config-airbnb": "^17.1.0",
        "eslint-config-prettier": "^6.0.0",
        "eslint-plugin-import": "^2.18.0",
        "eslint-plugin-jsx-a11y": "^6.2.1",
        "eslint-plugin-prettier": "^3.1.0",
        "eslint-plugin-react": "^7.14.2",
        "html-loader": "^0.5.5",
        "html-webpack-plugin": "^3.2.0",
        "husky": "^2.7.0",
        "lint-staged": "^8.2.1",
        "mini-css-extract-plugin": "^0.7.0",
        "node-sass": "^4.12.0",
        "prettier": "^1.18.2",
        "pretty-quick": "^1.11.1",
        "sass-loader": "^7.1.0",
        "webpack": "^4.35.0",
        "webpack-cli": "^3.3.4",
        "webpack-dev-server": "^3.7.2",
        "webpack-merge": "^4.2.1"
    }
}
